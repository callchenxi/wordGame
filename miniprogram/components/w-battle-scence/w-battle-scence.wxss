/* components/w-battle-scence/w-battle-scence.wxss */
.battle-scence {
  position: relative;
  height: 780rpx;
}
.battle-scence .team {
  display: flex;
  justify-content: space-evenly;
  width: 750rpx;
  height: 200rpx;
}
.battle-scence .pic-box {  
  position: relative;
}
.battle-scence .us {
  position: absolute;
  bottom: 0;
}
.battle-scence .us .pic {
  width: 140rpx;
  height: 200rpx;
}
.battle-scence .us .pic-b {
  position: absolute;
  width: 140rpx;
  height: 200rpx;
  left: 0;
  top: 0;
}
/* 我方攻击动画 */
.us .attack {
  animation-name: us-attack;
  animation-duration: .1s;
  animation-timing-function: linear;
  animation-iteration-count: 2;
  animation-direction: alternate;
} 
@keyframes us-attack {
  from{
    bottom: 0rpx;
  }
  to{
    bottom: 40rpx;
  }
}
.battle-scence .hp-box {
  margin: 10rpx 10rpx;
  position: relative;
}
.hp-box .hp-bar {  
  transform: rotate(180deg);
}
.hp-box .hp-txt {
  position: absolute;
  top: -6rpx;
  left: 50%;
  transform: translate(-50%);
  font-size: 30rpx;
}


.battle-scence .enemy {
  position: absolute;
  top: 0;
}
.enemy .pic-box {
  display: flex;
  justify-content: space-around;
  width: 750rpx;
  height: 300rpx;
}
.enemy .pic {
  width: 730rpx;
  height: 300rpx;
  border-radius: 10rpx;
}
/* 敌方攻击动画 */
.enemy .attack {
  position: relative;
  animation-name: en-attack;
  animation-duration: .1s;
  animation-timing-function: linear;
  animation-iteration-count: 2;
  animation-direction: alternate;
} 
@keyframes en-attack {
  from{
    top: 0;
  }
  to{
    top: 40rpx;
  }
}
