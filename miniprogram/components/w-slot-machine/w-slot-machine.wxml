<!--components/w-slot-machine/w-slot-machine.wxml-->
<view class="slot-machine">
  <view class="windows">
    <view class="win">
      <view class="reward-list" id="left" style="{{leftTop}}">
        <image src="../../images/treasure.svg" class="reward-img"></image>
        <image src="../../images/coin.svg" class="reward-img"></image>
        <image src="../../images/diamond.svg" class="reward-img"></image>
        <image src="../../images/medal.svg" class="reward-img"></image>
        <image src="../../images/treasure.svg" class="reward-img"></image>
        <image src="../../images/coin.svg" class="reward-img"></image>
        <image src="../../images/diamond.svg" class="reward-img"></image>
      </view>         
    </view>
    <view class="win">
      <view class="reward-list" id="center" style="{{centerTop}}">
        <image src="../../images/treasure.svg" class="reward-img"></image>
        <image src="../../images/coin.svg" class="reward-img"></image>
        <image src="../../images/diamond.svg" class="reward-img"></image>
        <image src="../../images/medal.svg" class="reward-img"></image>
        <image src="../../images/treasure.svg" class="reward-img"></image>
        <image src="../../images/coin.svg" class="reward-img"></image>
        <image src="../../images/diamond.svg" class="reward-img"></image>
      </view>
    </view>
    <view class="win">
      <view class="reward-list" id="right" style="{{rightTop}}">
        <image src="../../images/treasure.svg" class="reward-img"></image>
        <image src="../../images/coin.svg" class="reward-img"></image>
        <image src="../../images/diamond.svg" class="reward-img"></image>
        <image src="../../images/medal.svg" class="reward-img"></image>
        <image src="../../images/treasure.svg" class="reward-img"></image>
        <image src="../../images/coin.svg" class="reward-img"></image>
        <image src="../../images/diamond.svg" class="reward-img"></image>
      </view>
    </view>
  </view>
  <block wx:if="{{false}}">
    <view class="handleBtn" bind:tap="handlePlay" wx:if="{{isGo}}">开始</view>
    <view class="handleBtn" wx:else>稍等</view>
  </block>  
  <view class="reward-text"></view>
</view>
<!-- 图片大小: 50px * 50px -->
