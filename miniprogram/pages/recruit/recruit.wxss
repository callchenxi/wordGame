/* pages/recruit/recruit.wxss */
.title {  
  font-size: 50rpx;
  font-weight: 700;
  padding: 10rpx 0;
  text-align: center;
}
.cards-box {
  position: relative;
  margin: 0 auto;
  height: 980rpx;
}
.cards-box .cards{
  width: 700rpx;
  height: 900rpx;
  border-radius: 50rpx;
}
.cards-box .temp-card {
  position: absolute;
  width: 480rpx;
  height: 630rpx;
  border-radius: 50rpx;
  left: 15%;
  top: 15%;
  z-index: 99;
}
.cards-box .nine-box {
  position: absolute;
  left: 0;
  top: 20rpx;
  display: flex;
  width: 700rpx;
  height: 800rpx;
  flex-wrap: wrap;
  justify-content: space-evenly;
  z-index: 99;
  overflow: hidden;
}
.nine-box .nine-img {
  width: 180rpx;
}
.nine-box .each-box {
  position: relative;
}
.each-box .cover {
  position: absolute;
  width: 180rpx;
  height: 262rpx;
  left: 0;
  top: 0;
}
.cards-box .confirm-btn {
  position: relative;
  top: -20rpx;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  display: block;
  margin: 0 auto;
  z-index: 99;
}
.btns-box {
  display: flex;
  justify-content: space-evenly;
}
.btns-box .icon {
  width: 30rpx;
  height: 30rpx;
}
