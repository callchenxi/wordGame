/* miniprogram/pages/lineup/lineup.wxss */
.title {
  font-size: 80rpx;
  text-align: center;
  transform: scale(1.5);
  opacity: 0;
  animation: zoomin .7s .5s ease-out forwards;
}
@keyframes zoomin {
  from {transform: scale(1.5); opacity: 0;}
  80% {transform: scale(.8); opacity: 1;}
  to {transform: scale(1); opacity: 1;}
}
.team-box {
  position: relative;
  top: -70%;
  animation: topin .7s ease-out forwards;
}
@keyframes topin {
  from {top: -70%;}
  80% {top: 3%;}
  to {top: 0;}
}
.team-list {
  display: flex;
  width: 730rpx;
  height: 200rpx;
  margin: 0 auto;
}
.team-box .team {
  position: relative;
  background-color: goldenrod;
  text-align: center;
  padding-bottom: 4rpx;
  width: 145rpx;
  height: 200rpx;
}
.team-box .team-pic {
  width: 140rpx;
  height: 200rpx;
  padding: 0 2rpx;
}
.pic-border {
  position: absolute;
  left: 0; 
  z-index: 99;  
}
.chk-ani {
  animation-name: checked;
  animation-duration: .2s;
  animation-timing-function: ease-out;
} 
@keyframes checked {
  from{
    transform: scale(1.2);
  }
  to{
    transform: scale(1);
  }
}

.props-box .props {
  display: flex;
  justify-content: space-evenly;
  font-weight: 700;
}

.props .hp-txt {
  color: green;
}

.props .atk-txt {
  color: red;
}

.props .def-txt {
  color: blue;
}

.props .up {
  color: gold
}
.props .down {
  color: gray
}
.props-box .buff {
  width: 600rpx;
  margin: 0 auto;
}
.txt-0 {
  color: goldenrod;
}
.txt-1 {
  color: skyblue;
}
.txt-2 {
  color: plum;
}
.txt-3 {
  color: greenyellow;
}
.cpn-members {
  position: relative;
  top: 60%;
  animation: bottomin .7s ease-out forwards;
}
@keyframes bottomin {
  from {top: 60%;}
  80% {top: -3%;}
  to {top: 0;}
}